---
import '../../styles/global.css';
---

<html lang="ar" dir="rtl" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>أسس | أكبر مجتمع عربي للبرمجيات الحرة والمفتوحة المصدر</title>
  <meta name="description" content="أسس - أكبر مجتمع عربي للبرمجيات الحرة والمفتوحة المصدر" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;700&family=IBM+Plex+Sans+Arabic:wght@400;500;700&display=swap" rel="stylesheet" />

  <style>
    /* ── Base & CRT ─────────────────────────────────────── */
    :root {
      --phosphor: #00ff41;
      --phosphor-dim: #00cc33;
      --phosphor-bright: #33ff66;
      --bg-dark: #0a0a0a;
      --bg-terminal: #001a00;
      --glow-sm: 0 0 4px rgba(0, 255, 65, 0.4);
      --glow-md: 0 0 8px rgba(0, 255, 65, 0.3), 0 0 16px rgba(0, 255, 65, 0.1);
      --glow-lg: 0 0 10px rgba(0, 255, 65, 0.5), 0 0 20px rgba(0, 255, 65, 0.3), 0 0 40px rgba(0, 255, 65, 0.1);
    }

    html {
      scrollbar-color: #00ff41 #0a0a0a;
    }

    body {
      font-family: 'IBM Plex Mono', 'IBM Plex Sans Arabic', monospace;
      background: var(--bg-dark);
      color: var(--phosphor);
      min-height: 100vh;
      position: relative;
      overflow-x: hidden;
    }

    /* Light mode overrides */
    html:not(.dark) body {
      background: #fdf6e3;
      color: #073642;
    }
    html:not(.dark) .terminal-window {
      background: #fdf6e3 !important;
      border-color: #93a1a1 !important;
    }
    html:not(.dark) .terminal-titlebar {
      background: #eee8d5 !important;
      border-color: #93a1a1 !important;
      color: #586e75 !important;
    }
    html:not(.dark) .terminal-dot {
      opacity: 0.5;
    }
    html:not(.dark) .phosphor {
      color: #073642 !important;
    }
    html:not(.dark) .phosphor-dim {
      color: #586e75 !important;
    }
    html:not(.dark) .phosphor-bright {
      color: #073642 !important;
    }
    html:not(.dark) .text-glow {
      text-shadow: none !important;
    }
    html:not(.dark) .text-glow-lg {
      text-shadow: none !important;
    }
    html:not(.dark) .scanlines {
      display: none;
    }
    html:not(.dark) .crt-vignette {
      display: none;
    }
    html:not(.dark) .prompt-symbol {
      color: #268bd2 !important;
    }
    html:not(.dark) .aosus-link {
      color: #268bd2 !important;
    }
    html:not(.dark) .section-border {
      border-color: #93a1a1 !important;
    }
    html:not(.dark) .ascii-art {
      color: #2aa198 !important;
    }
    html:not(.dark) .kv-label {
      color: #b58900 !important;
    }
    html:not(.dark) .pkg-name {
      color: #859900 !important;
    }
    html:not(.dark) .pkg-version {
      color: #cb4b16 !important;
    }
    html:not(.dark) .hash {
      color: #cb4b16 !important;
    }
    html:not(.dark) .git-date {
      color: #6c71c4 !important;
    }
    html:not(.dark) .comment {
      color: #93a1a1 !important;
    }
    html:not(.dark) .readme-header {
      color: #268bd2 !important;
      border-color: #93a1a1 !important;
    }
    html:not(.dark) .cursor-blink {
      background: #073642 !important;
    }
    html:not(.dark) .paper-texture {
      background-image: repeating-linear-gradient(
        180deg,
        transparent,
        transparent 27px,
        rgba(0, 0, 0, 0.03) 28px
      );
    }
    html:not(.dark) .cta-cmd:hover {
      background: #eee8d5 !important;
    }

    /* CRT Scanlines Overlay */
    .scanlines::after {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 9999;
      background: repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(0, 0, 0, 0.15) 2px,
        rgba(0, 0, 0, 0.15) 4px
      );
    }

    /* CRT Vignette */
    .crt-vignette::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 9998;
      background: radial-gradient(
        ellipse at center,
        transparent 60%,
        rgba(0, 0, 0, 0.4) 100%
      );
    }

    /* Screen Flicker */
    @keyframes flicker {
      0%, 100% { opacity: 1; }
      92% { opacity: 1; }
      93% { opacity: 0.96; }
      94% { opacity: 1; }
      96% { opacity: 0.98; }
      97% { opacity: 1; }
    }
    .flicker {
      animation: flicker 8s infinite;
    }

    /* Blinking Cursor */
    @keyframes blink-cursor {
      0%, 49% { opacity: 1; }
      50%, 100% { opacity: 0; }
    }
    .cursor-blink {
      display: inline-block;
      width: 0.6em;
      height: 1.1em;
      background: var(--phosphor);
      vertical-align: text-bottom;
      animation: blink-cursor 1s step-end infinite;
    }

    /* Text glow */
    .text-glow {
      text-shadow: var(--glow-sm);
    }
    .text-glow-lg {
      text-shadow: var(--glow-lg);
    }

    /* Boot animation */
    @keyframes typeIn {
      from { width: 0; }
      to { width: 100%; }
    }
    @keyframes fadeInLine {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    .boot-line {
      animation: fadeInLine 0.1s ease-out forwards;
      opacity: 0;
    }
    .boot-line:nth-child(1) { animation-delay: 0.1s; }
    .boot-line:nth-child(2) { animation-delay: 0.3s; }
    .boot-line:nth-child(3) { animation-delay: 0.5s; }
    .boot-line:nth-child(4) { animation-delay: 0.7s; }
    .boot-line:nth-child(5) { animation-delay: 0.9s; }
    .boot-line:nth-child(6) { animation-delay: 1.1s; }
    .boot-line:nth-child(7) { animation-delay: 1.4s; }
    .boot-line:nth-child(8) { animation-delay: 1.6s; }
    .boot-line:nth-child(9) { animation-delay: 1.8s; }
    .boot-line:nth-child(10) { animation-delay: 2.0s; }
    .boot-line:nth-child(11) { animation-delay: 2.3s; }
    .boot-line:nth-child(12) { animation-delay: 2.6s; }

    /* Terminal window */
    .terminal-window {
      background: rgba(0, 10, 0, 0.95);
      border: 1px solid #00ff4133;
      border-radius: 8px 8px 0 0;
      overflow: hidden;
    }
    .terminal-titlebar {
      background: rgba(0, 26, 0, 0.9);
      border-bottom: 1px solid #00ff4122;
      padding: 8px 16px;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    .terminal-dot {
      width: 12px;
      height: 12px;
      border-radius: 50%;
    }

    /* Prompt */
    .prompt-symbol {
      color: var(--phosphor-bright);
      font-weight: 700;
    }

    /* Scrollbar for terminal feel */
    .terminal-body::-webkit-scrollbar {
      width: 8px;
    }
    .terminal-body::-webkit-scrollbar-track {
      background: #001a00;
    }
    .terminal-body::-webkit-scrollbar-thumb {
      background: #00ff4144;
      border-radius: 4px;
    }

    /* CTA command hover */
    .cta-cmd {
      transition: background 0.15s;
    }
    .cta-cmd:hover {
      background: rgba(0, 255, 65, 0.08);
    }

    /* Progress bar chars */
    .progress-filled {
      color: var(--phosphor);
    }
    .progress-empty {
      color: #00ff4133;
    }

    /* Responsive ASCII art */
    .ascii-responsive {
      font-size: clamp(0.35rem, 1.2vw, 0.85rem);
      line-height: 1.2;
    }

    /* Selection color */
    ::selection {
      background: #00ff4144;
      color: var(--phosphor-bright);
    }
    html:not(.dark) ::selection {
      background: #268bd233;
      color: #073642;
    }
  </style>
</head>


---
import '../../styles/global.css';
---

<html lang="ar" dir="rtl" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>مجتمع أسس — أكبر مجتمع عربي للبرمجيات الحرة والمفتوحة</title>
  <meta name="description" content="أكبر مجتمع عربي للبرمجيات الحرة والمفتوحة المصدر" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Overpass+Mono:wght@300;400;500;600;700&family=Readex+Pro:wght@200;300;400;500;600;700&display=swap" rel="stylesheet" />

  <style>
    /* Blueprint Grid Background */
    .blueprint-grid {
      background-color: #0a1628;
      background-image:
        /* Thin lines every 20px */
        linear-gradient(rgba(29, 112, 186, 0.08) 1px, transparent 1px),
        linear-gradient(90deg, rgba(29, 112, 186, 0.08) 1px, transparent 1px),
        /* Thick lines every 100px */
        linear-gradient(rgba(29, 112, 186, 0.18) 1px, transparent 1px),
        linear-gradient(90deg, rgba(29, 112, 186, 0.18) 1px, transparent 1px);
      background-size:
        20px 20px,
        20px 20px,
        100px 100px,
        100px 100px;
    }

    :root:not(.dark) .blueprint-grid {
      background-color: #e8eef7;
      background-image:
        linear-gradient(rgba(29, 112, 186, 0.06) 1px, transparent 1px),
        linear-gradient(90deg, rgba(29, 112, 186, 0.06) 1px, transparent 1px),
        linear-gradient(rgba(29, 112, 186, 0.15) 1px, transparent 1px),
        linear-gradient(90deg, rgba(29, 112, 186, 0.15) 1px, transparent 1px);
      background-size:
        20px 20px,
        20px 20px,
        100px 100px,
        100px 100px;
    }

    /* Corner Registration Marks */
    .corner-marks {
      position: relative;
    }
    .corner-marks::before,
    .corner-marks::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      pointer-events: none;
    }
    .corner-marks::before {
      top: -1px;
      right: -1px;
      border-top: 2px solid var(--color-aosus-blue);
      border-right: 2px solid var(--color-aosus-blue);
    }
    .corner-marks::after {
      bottom: -1px;
      left: -1px;
      border-bottom: 2px solid var(--color-aosus-blue);
      border-left: 2px solid var(--color-aosus-blue);
    }

    /* Bottom-left and top-right marks via wrapper */
    .corner-marks-inner {
      position: relative;
    }
    .corner-marks-inner::before,
    .corner-marks-inner::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      pointer-events: none;
    }
    .corner-marks-inner::before {
      top: -1px;
      left: -1px;
      border-top: 2px solid var(--color-aosus-blue);
      border-left: 2px solid var(--color-aosus-blue);
    }
    .corner-marks-inner::after {
      bottom: -1px;
      right: -1px;
      border-bottom: 2px solid var(--color-aosus-blue);
      border-right: 2px solid var(--color-aosus-blue);
    }

    :root:not(.dark) .corner-marks::before,
    :root:not(.dark) .corner-marks::after,
    :root:not(.dark) .corner-marks-inner::before,
    :root:not(.dark) .corner-marks-inner::after {
      border-color: #1d70ba;
    }

    /* Dimension Line */
    .dimension-line {
      position: relative;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .dimension-line::before,
    .dimension-line::after {
      content: '';
      flex: 1;
      height: 1px;
      background: var(--color-aosus-green);
    }
    .dimension-line::before {
      background: linear-gradient(to left, var(--color-aosus-green), transparent);
    }
    .dimension-line::after {
      background: linear-gradient(to right, var(--color-aosus-green), transparent);
    }

    /* Dashed Construction Lines */
    .construction-line {
      border-style: dashed;
      border-color: rgba(29, 112, 186, 0.3);
    }

    :root:not(.dark) .construction-line {
      border-color: rgba(29, 112, 186, 0.4);
    }

    /* Blueprint Drawing Animation */
    @keyframes draw-in {
      from {
        stroke-dashoffset: 1000;
        opacity: 0;
      }
      to {
        stroke-dashoffset: 0;
        opacity: 1;
      }
    }

    @keyframes fade-draw {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes type-in {
      from {
        width: 0;
        opacity: 0;
      }
      to {
        width: 100%;
        opacity: 1;
      }
    }

    .draw-animate {
      animation: fade-draw 0.8s ease-out both;
    }

    .draw-delay-1 { animation-delay: 0.1s; }
    .draw-delay-2 { animation-delay: 0.2s; }
    .draw-delay-3 { animation-delay: 0.3s; }
    .draw-delay-4 { animation-delay: 0.4s; }
    .draw-delay-5 { animation-delay: 0.5s; }
    .draw-delay-6 { animation-delay: 0.6s; }
    .draw-delay-7 { animation-delay: 0.7s; }
    .draw-delay-8 { animation-delay: 0.8s; }
    .draw-delay-9 { animation-delay: 0.9s; }

    /* Annotation Callout */
    .annotation {
      position: relative;
      padding-right: 1.5rem;
    }
    .annotation::before {
      content: '';
      position: absolute;
      right: 0;
      top: 50%;
      width: 12px;
      height: 12px;
      border-radius: 50%;
      border: 2px solid var(--color-aosus-green);
      background: transparent;
      transform: translateY(-50%);
    }
    .annotation::after {
      content: '';
      position: absolute;
      right: 12px;
      top: 50%;
      width: 8px;
      height: 1px;
      background: var(--color-aosus-green);
    }

    /* Fonts */
    .font-mono-bp {
      font-family: 'Overpass Mono', monospace;
    }
    .font-ar {
      font-family: 'Readex Pro', sans-serif;
    }

    /* Title Block Border */
    .title-block {
      border: 2px solid var(--color-aosus-blue);
      position: relative;
    }
    .title-block::before {
      content: '';
      position: absolute;
      inset: 3px;
      border: 1px solid rgba(29, 112, 186, 0.4);
      pointer-events: none;
    }

    /* Section header with line */
    .section-label {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .section-label::after {
      content: '';
      flex: 1;
      height: 1px;
      background: linear-gradient(to left, transparent, var(--color-aosus-blue));
    }

    /* Component card hover */
    .component-card {
      transition: all 0.3s ease;
    }
    .component-card:hover {
      border-color: var(--color-aosus-green) !important;
      box-shadow: 0 0 20px rgba(0, 138, 47, 0.1);
    }
    .component-card:hover .part-number {
      color: var(--color-aosus-green);
    }

    /* Scrollbar styling */
    ::-webkit-scrollbar {
      width: 6px;
    }
    ::-webkit-scrollbar-track {
      background: rgba(29, 112, 186, 0.05);
    }
    ::-webkit-scrollbar-thumb {
      background: rgba(29, 112, 186, 0.3);
      border-radius: 3px;
    }

    /* Crosshair decoration */
    .crosshair {
      position: relative;
    }
    .crosshair::before {
      content: '+';
      position: absolute;
      top: -10px;
      right: -10px;
      color: rgba(29, 112, 186, 0.4);
      font-family: 'Overpass Mono', monospace;
      font-size: 14px;
      line-height: 1;
    }

    /* Technical stamp */
    .tech-stamp {
      border: 2px solid var(--color-aosus-blue);
      position: relative;
    }
    .tech-stamp::before {
      content: '';
      position: absolute;
      inset: 2px;
      border: 1px solid rgba(29, 112, 186, 0.3);
      pointer-events: none;
    }

    /* Light mode text overrides */
    :root:not(.dark) .bp-text {
      color: #0a1628;
    }
    :root:not(.dark) .bp-text-muted {
      color: #2a4060;
    }
    :root:not(.dark) .bp-border {
      border-color: #1d70ba;
    }
    :root:not(.dark) .bp-border-subtle {
      border-color: rgba(29, 112, 186, 0.3);
    }

    /* Toggle switch */
    .toggle-track {
      width: 40px;
      height: 20px;
      border-radius: 10px;
      border: 1px solid var(--color-aosus-blue);
      background: rgba(29, 112, 186, 0.1);
      cursor: pointer;
      position: relative;
      transition: all 0.3s;
    }
    .toggle-track::after {
      content: '';
      position: absolute;
      top: 2px;
      right: 2px;
      width: 14px;
      height: 14px;
      border-radius: 50%;
      background: var(--color-aosus-blue);
      transition: all 0.3s;
    }
    :root:not(.dark) .toggle-track::after {
      right: auto;
      left: 2px;
      background: var(--color-aosus-green);
    }

    /* Step connector line */
    .step-connector {
      position: relative;
    }
    .step-connector::after {
      content: '';
      position: absolute;
      left: 50%;
      bottom: -2rem;
      width: 1px;
      height: 2rem;
      background: repeating-linear-gradient(
        to bottom,
        var(--color-aosus-blue) 0px,
        var(--color-aosus-blue) 4px,
        transparent 4px,
        transparent 8px
      );
    }
    .step-connector:last-child::after {
      display: none;
    }

    /* Pulse dot */
    @keyframes pulse-dot {
      0%, 100% { opacity: 0.4; }
      50% { opacity: 1; }
    }
    .pulse-dot {
      animation: pulse-dot 2s ease-in-out infinite;
    }
  </style>
</head>


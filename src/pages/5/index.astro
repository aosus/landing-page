  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Arabic:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <style>
    body { font-family: 'IBM Plex Sans Arabic', sans-serif; }
    .font-jakarta { font-family: 'Plus Jakarta Sans', sans-serif; }
    html { scroll-behavior: smooth; }

    /* Gradient mesh background */
    .mesh-bg {
      background:
        radial-gradient(ellipse 50% 40% at 15% 20%, rgba(0,138,47,0.18) 0%, transparent 70%),
        radial-gradient(ellipse 40% 50% at 85% 60%, rgba(29,112,186,0.15) 0%, transparent 70%),
        radial-gradient(ellipse 35% 35% at 50% 85%, rgba(0,138,47,0.1) 0%, transparent 70%);
    }
    :root:not(.dark) .mesh-bg {
      background:
        radial-gradient(ellipse 50% 40% at 15% 20%, rgba(0,138,47,0.08) 0%, transparent 70%),
        radial-gradient(ellipse 40% 50% at 85% 60%, rgba(29,112,186,0.06) 0%, transparent 70%),
        radial-gradient(ellipse 35% 35% at 50% 85%, rgba(0,138,47,0.05) 0%, transparent 70%);
    }

    /* Glass card */
    .glass {
      background: rgba(255,255,255,0.04);
      backdrop-filter: blur(24px) saturate(1.4);
      -webkit-backdrop-filter: blur(24px) saturate(1.4);
      border: 1px solid rgba(255,255,255,0.08);
    }
    :root:not(.dark) .glass {
      background: rgba(255,255,255,0.55);
      border-color: rgba(255,255,255,0.7);
      box-shadow: 0 4px 30px rgba(0,0,0,0.05);
    }

    .glass-strong {
      background: rgba(255,255,255,0.06);
      backdrop-filter: blur(40px) saturate(1.6);
      -webkit-backdrop-filter: blur(40px) saturate(1.6);
      border: 1px solid rgba(255,255,255,0.1);
    }
    :root:not(.dark) .glass-strong {
      background: rgba(255,255,255,0.7);
      border-color: rgba(255,255,255,0.8);
      box-shadow: 0 8px 40px rgba(0,0,0,0.06);
    }

    .glass-accent {
      background: linear-gradient(135deg, rgba(0,138,47,0.08) 0%, rgba(29,112,186,0.06) 100%);
      backdrop-filter: blur(24px);
      -webkit-backdrop-filter: blur(24px);
      border: 1px solid rgba(0,138,47,0.15);
    }
    :root:not(.dark) .glass-accent {
      background: linear-gradient(135deg, rgba(0,138,47,0.06) 0%, rgba(29,112,186,0.04) 100%);
      border-color: rgba(0,138,47,0.2);
    }

    /* Animations */
    @keyframes float-up { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
    .anim { animation: float-up 0.7s ease-out both; }
    .d1 { animation-delay: 0.1s; }
    .d2 { animation-delay: 0.2s; }
    .d3 { animation-delay: 0.3s; }
    .d4 { animation-delay: 0.4s; }
    .d5 { animation-delay: 0.5s; }

    /* Subtle noise texture */
    .noise::after {
      content: '';
      position: fixed;
      inset: 0;
      opacity: 0.015;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
      pointer-events: none;
      z-index: 1;
    }
    :root:not(.dark) .noise::after {
      opacity: 0.025;
    }

    /* Glow ring around icon */
    .glow-ring {
      box-shadow: 0 0 40px rgba(0,138,47,0.15), 0 0 80px rgba(29,112,186,0.1);
    }
    :root:not(.dark) .glow-ring {
      box-shadow: 0 0 30px rgba(0,138,47,0.1), 0 0 60px rgba(29,112,186,0.06);
    }
  </style>
</head>
